# Vast.ai Server Environment Variables
# Copy this to /root/.env on your Vast.ai server

# Enhancer API URL (running on same server, port 30500)
ENHANCER_URL=http://localhost:30500/enhance

# Firebase Configuration
FIREBASE_CREDENTIALS=/root/firebase-service-account.json
FIREBASE_BUCKET=your-project-id.appspot.com

# Optional: PyTorch Memory Management
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True
