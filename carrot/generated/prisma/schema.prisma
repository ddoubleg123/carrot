generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  name         String? // optional until onboarding
  firstName    String?
  lastName     String?
  username     String? @unique
  phone        String?
  country      String?
  postalCode   String?
  image        String? // stores profile image URL/data
  profilePhoto String? // onboarding-uploaded avatar URL
  isOnboarded  Boolean @default(false)
  // Add any other fields as needed
}
