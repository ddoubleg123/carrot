# DeepSeek Coder Infrastructure Configuration

# Model URLs
OLLAMA_URL=http://localhost:11434
VLLM_URL=http://localhost:8000

# Database
REDIS_URL=redis://localhost:6379
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deepseek_rag
DB_USER=deepseek
DB_PASSWORD=deepseek_password

# Environment
NODE_ENV=development
PORT=8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
CACHE_TTL_SECONDS=3600

# Safety Settings
ENABLE_MODERATION=true
ENABLE_PII_DETECTION=true
ENABLE_SECRET_SCANNING=true

# Logging
LOG_LEVEL=debug
LOG_FILE=router.log

# Model Configuration
DEFAULT_TEMPERATURE=0.2
DEFAULT_MAX_TOKENS=700
MODEL_TIMEOUT=30000

# RAG Settings
EMBEDDING_MODEL=Xenova/bge-small-en-v1.5
CHUNK_SIZE=300
CHUNK_OVERLAP=50
MAX_RAG_CHUNKS=3

# Security
ALLOWED_TASK_TYPES=editor,refactor_hook@v1,explain_tests@v1,chat,rag-code,rag-doc,ci
BLOCKED_PATTERNS=political,election,government,policy,hate,discrimination,violence

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
